#!/usr/bin/env bash

set -eu

readonly ROOT_DIR="$(realpath "$(dirname "$(realpath "$0")")/..")"

function removeComposerLock {
    if [ -f "${ROOT_DIR}"/composer.lock ]; then
        rm "${ROOT_DIR}"/composer.lock
    fi
}

removeComposerLock
docker \
    run \
        -it \
        --rm \
        --volume "${ROOT_DIR}":/app \
        --workdir /app \
        --user "$(id -u)":"$(id -g)" \
        composer:2.1.12 \
        "${@}"
removeComposerLock
